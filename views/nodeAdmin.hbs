<!DOCTYPE html>
<html>

<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" rel="stylesheet">
    <link type="text/css" rel="stylesheet" href="/css/nodeAdmin.css"/>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/velocity/1.2.2/velocity.min.js'></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/velocity/1.2.2/velocity.ui.min.js'></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-multiselect/0.9.13/js/bootstrap-multiselect.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-multiselect/0.9.13/css/bootstrap-multiselect.css">

    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap.min.css">
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap.min.js"></script>
    <title>Node Admin</title>
</head>

<body>
    Handlebars.registerHelper()
    <div class="container-fluid text-center">

        <div class="row content">

          <div class="col-sm-2 sidenav">
            <p>Parent Node</p>
            {{#if data.idParentNode}}
                <p><a href="/node/{{data.idParentNode}}">Node {{data.Comments}}</a></p><br>
            {{else}}
                <p><a href="/projectDetail/{{data.idProject}}">Project {{data.idProject}}</a></p>
            {{/if}}

            <p>Related Nodes (Nodes on same level)</p>
            {{#each levelNodes}}
                <p><a href="/node/{{idNode}}">{{Comments}}</a></p>
            
            {{/each}}

            <p>Child Nodes</p>
            {{#each childNodes}}
                <p><a href="/node/{{idNode}}">{{Comments}}</a></p>
            {{else}}
                <p>None</p>
            {{/each}}

          </div>

    <div class="col-sm-8 text-left">
        
        <h4>Node name: {{ data.Comments }} </h4>
        <h4>Node ID: {{ data.idNode }} </h4>
        <h4>Project ID: {{ data.idProject }} </h4>
        <textarea class="form-control" id="exampleTextarea" readonly rows="4"> {{ data.NodeDescription }} </textarea>

        <script>
            function hey() {
                document.getElementById('exampleTextarea').readOnly = false;
                return false;
            }
        </script>


        <button id="editDescButton" type="button" class="btn btn-default" onclick="hey()"> Edit </button>

        <br>


        <div class="form-group">
            <h4>Calculation Deadlines </h4>
            <p>A form/table here </p>
        </div>

        <div class="form-group" style="overflow-x:auto;">
            <h4>Costs</h4><br>

            <table id="My_Table" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Cost</th>
                        <th>Cost type</th>
                        <th>Value</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each nodeCosts}}
                        <tr>
                            <td>{{ResourceName}}</td>
                            <td>{{ResourceType}}</td>
                            <td>{{Cost}}</td>
                            <td>{{Comments}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table><br>
        </div>

        <div class="form-group" id="nodeCostList" style="overflow-x:auto;">
            {{#each childNodes}}
                <h4>Node {{idNode}}</h4><br>
                <table id="My_Table" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                      <th>Cost</th>
                      <th>Cost type</th>
                      <th>Value</th>
                      <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each childNodeCosts}}
                        <tr>
                            <td>{{ResourceName}}</td>
                            <td>{{ResourceType}}</td>
                            <td>{{Cost}}</td>
                            <td>{{Comments}}</td>
                        </tr>
                    {{/each}}
                </tbody>
                </table> <br>
            {{/each}}
            <!--<h4>Node 6</h4><br>

            <table id="My_Table" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                      <th>Cost</th>
                      <th>Cost type</th>
                      <th>Value</th>
                      <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>{{childNodes.cost}}</td>
                    <td>{{childNodes.costType}}</td>
                    <td>{{childNodes.value}}</td>
                    <td>{{childNodes.Status}} </td>
                  </tr>
                  <tr>
                    <td>Look at something</td>
                    <td>Consulting</td>
                    <td>500</td>
                    <td>In Progress</td>
                  </tr>
                </tbody>
            </table><br>-->
    </div>

        <button type="button" class="btn btn-calculateProject" data-toggle="modal" data-target="#createCalc">Create Calculation</button>
        <button type="button" class="btn btn-createNode" data-toggle="modal" data-target="#createNodeModal123">Create Child Node</button>

        <button type="button" class="btn btn-save">Save</button>
        <button type="button" class="btn btn-submit" data-toggle="modal" data-target="#submitThisNode">Submit</button>

                <!--Modal submiting this node-->
                <div class="modal" id="submitThisNode" data-easein="slideUpIn" tabindex="-1" role="dialog" aria-labelledby="costumModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">Children Node Status</h4>
                            </div>

                            <div class="modal-body">
                                <table id="myTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                    <script type="text/javascript" src="../js/createTable.js"></script>
                                    <script>
                                    var arrayTablesData =
                                    [ { 'node': '4',
                                    'version' : '1',
                                    'calculationStatus' : 'In Progress',},
                                    { 'node': '5',
                                    'version' : '1',
                                    'calculationStatus' : 'Submitted',},
                                    { 'node': '6',
                                    'version' : '1',
                                    'calculationStatus' : 'In Progress',},];

                                    createTableHeader(['Node', 'Version', 'Responsible Person'], "myTable");
                                    insertTableData(3, arrayTablesData, false, "myTable");
                                    </script>
                                </table>
                            </div>
                            <div class="modal-footer">
                                <button class="btn btn-primary" data-dismiss="modal">Submit</button>
                                <!--TODO: Add a function that saves data to DB from form-->
                                <button class="btn btn-primary" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>


                <!--Modal for adding additional subnodes to current node-->
                <div class="modal" id="createNodeModal123" data-easein="slideUpIn" tabindex="-1" role="dialog" aria-labelledby="costumModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">Create Node</h4>
                            </div>

                            <div style="height:100%;" class="modal-body">
                                <form action="/node/{{ data.idProject }}/{{ output }}/addchild/" method="POST">
                                    <div class="form-group">
                                        <label for="inputNodeName">Node Name</label>
                                        <textarea class="form-control" rows="1" placeholder="Node name" type="text" name="inputNodeName"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputNodeDesc">Node Description</label>
                                        <textarea class="form-control" rows="1" placeholder="Node description" type="text" name="inputNodeDesc"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputNodeType">Select Node Type</label>
                                        <select class="form-control" name="inputNodeType">
                                            <option>Group</option>
                                            <option>Engineering hours</option>
                                            <option>D&D by non-production suppliers</option>
                                            <option>D&D producion suppliers</option>
                                            <option>Test Objects</option>
                                        </select>
                                        <br>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputNodePerson">Assign manager to node</label>
                                        <select multiple class="form-control" name="inputManagerNode">
                                            <option>Person 1</option>
                                            <option>Person 2</option>
                                            <option>Person 3</option>
                                            <option>Person 4</option>
                                            <option>Person 5</option>
                                            <option>Person 6</option>
                                            <option>Person 7</option>
                                            <option>Person 8</option>
                                            <option>Person 9</option>
                                            <option>Person 10</option>
                                            <option>Person 11</option>
                                            <option>Person 12</option>
                                        </select>
                                    </div>
                    
                            </div>
                            <div class="modal-footer">
                                <button class="btn btn-primary" type="submit" value="Submit">Submit</button>
                                <!--TODO: Add a function that saves data to DB from form-->
                                <button class="btn btn-primary" data-dismiss="modal">Close</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- from here is to create calculation -->
                <div class="modal" id="createCalc" data-easein="slideUpIn" tabindex="-1" role="dialog" aria-labelledby="costumModalLabel"
                		aria-hidden="true">
                		<div class="modal-dialog">
                				<div class="modal-content">
                						<div class="modal-header">
                								<button class="close" data-dismiss="modal">&times;</button>
                								<h4 class="modal-title">Create Calculation</h4>
                						</div>

                						<div class="modal-body">
                								<form>
                										<div class="form-group">
                												<label for="inputNodeName">Cost</label>
                												<input class="form-control" Name="Node name" placeholder="The specific cost" type="text" id="inputNodeName">
                										</div>
                										<div class="form-group">
                												<label for="inputNodeDesc">Cost Type</label>
                												<textarea class="form-control" rows="1" placeholder="E.g Consulting, Testing equipment etc." type="text" id="inputNodeDesc"></textarea>
                										</div>
                                    <div class="form-group">
                												<label for="inputNodeDesc">Value</label>
                												<textarea class="form-control" rows="1" placeholder="Cost in $$$" type="text" id="inputNodeDesc"></textarea>
                										</div>
                                    <div class="form-group">
                                        <label for="inputNodeType">Status</label>
                                        <select class="form-control" id="sel1">
                                            <option>In Progress</option>
                                            <option>Done</option>
                                        </select>
                                    </div>
                						<div class="modal-footer">
                								<button class="btn btn-primary" data-dismiss="modal">Save</button>
                								<button class="btn btn-primary" data-dismiss="modal">Submit</button>
                								<button class="btn btn-primary" data-dismiss="modal">Close</button>
                						</div>
                				</div>
                		</div>
                </div>
                </div>



                <!--calculation ends here -->


            <script src='https://cdnjs.cloudflare.com/ajax/libs/velocity/1.2.2/velocity.min.js'></script>
            <script src='https://cdnjs.cloudflare.com/ajax/libs/velocity/1.2.2/velocity.ui.min.js'></script>

    </div>


    <div class="col-sm-2 sidenav">
        <h4>Node Administrator</h4>

        <p>Sime</p>
        <p><br><a href="#">Add new manager</a></p>

    </div>
    </div>
    </div>

    <script src="/js/nodeAdmin.js"></script>

    <script>
        console.log('test');
        buildNodeTable(JSON.parse({{childNodes}}));
        console.log('test2');
    </script>

<div class="footer"></div>

</body>

</html>
